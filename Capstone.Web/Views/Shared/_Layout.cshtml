@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE = edge">
    <meta name="viewport" content="width=device-width" />
    <title>Tournament Managament App - @ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Lato">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/stylesheet.css" rel="stylesheet" />
    <link href="~/Content/jquery.bracket.min.css" rel="stylesheet" />
   
    <script src="https://use.fontawesome.com/b6042e8b1f.js"></script>

    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/additional-methods.min.js"></script>
    <!-- BOOTSTRAPPER -->
    <script src="~/Scripts/bootstrap.js"></script>
   
    <script src="~/Scripts/jquery-3.1.1.intellisense.js"></script>
    @*<script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>*@
    <script src="~/Scripts/jquery-3.1.1.slim.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.bracket.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

</head>
<body>
    <header>
        <img src="~/Content/images/bowling.jpg" />
    </header>
    <nav class="navbar-inverse navbar-nav">
        <ul id="menu">
            <li>@Html.ActionLink("Home","Index","Home")</li>
            <li>@Html.ActionLink("Browse", "Browse", "Tournament")</li>
            <li><a href='@Url.Action("Search","Tournament")'>
                Search <i class="glyphicon glyphicon-search"></i></a></li>
            @if ((string)Session[SessionKeys.AccountType] == "organizer")
            {
                <li>@Html.ActionLink("Create Tournament", "CreateTournament", "Tournament")</li>
            }
            @if (Session[SessionKeys.UsernameKey] == null)
            {
                <li class="navbar-right-side">@Html.ActionLink("Register", "RegisterNewUser", "Users")</li>
                <li class="navbar-right-side">@Html.ActionLink("Login", "Login", "Users")</li>
            }
            @if (Session[SessionKeys.UsernameKey] != null)
            {
                <li class="navbar-right-side">@Html.ActionLink("Logout", "Logout", "Users")</li>
                <li id="display-name" class="navbar-right-side">Welcome, @Session[SessionKeys.DisplayName]</li>
            }
        </ul>
    </nav>

    <main>
        @RenderBody()
    </main>
    <footer>
        <p class="text-center">Team Golf &copy; @DateTime.Now.Year</p>
    </footer>
</body>
</html>
