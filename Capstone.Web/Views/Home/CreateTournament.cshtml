@model Capstone.Web.Models.Tournament
@{
    ViewBag.Title = "CreateTournament";
}

<h2>CreateTournament</h2>

<div class="container-fluid" style="margin: 20px;">
    <form class="form-horizontal">
        @using (Html.BeginForm("CreateTournament", "Home", FormMethod.Post))
        {
            <fieldset>
                <div class="col-sm-2">
                    @Html.Label("Tournament Name:", new { @class = "control-label" })
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "i.e Bowling", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </fieldset>
            @*<div class="form-group">
                    <div class="control-label col-sm-6">
                        <p>Tournament Type: </p>
                    </div>
                    <div class="col-sm-6">
                        @Html.Label("Single-Elimination", new { @class = "control-label col-sm-2" })
                    </div>
                </div>*@
            <fieldset>
                <div class="col-sm-2">
                    @Html.Label("Number of Participants:", new { @class = "control-label" })
                </div>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CompetitorLimit, new { placeholder = "choose even players", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CompetitorLimit)
                </div>
            </fieldset>
            <fieldset>
                <div class="col-sm-4">
                    @Html.Label("Start Date:", new { @class = "control-label" })
                </div>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.StartDate)
                </div>
            </fieldset>
            <fieldset>
                <div class="col-sm-4">
                    @Html.Label("End Date:", new { @class = "control-label" })
                </div>
                <div class="col-sm-8">
                    @Html.TextBoxFor(m => m.EndDate, new { @placeholder = "Tournament end date", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.EndDate)
                </div>
            </fieldset>
            <fieldset>
                <br />
                <div>
                    <button class="btn btn-default">Generate New Bracket</button>
                </div>
            </fieldset>
        }
    </form>
</div>





