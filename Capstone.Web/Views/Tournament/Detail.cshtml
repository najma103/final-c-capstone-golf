@using Capstone.Web.Models;
@{
    ViewBag.Title = "Tournament";
}
@model Tournament

<div class="container"style="background-color:aquamarine; margin-top:80px;">

    <div class="row">
        <div class="col-md-12">
            <h2>@Model.TournamentName</h2>
        </div>
        <div class="col-md-4">
            <h3> Hosted By </h3><span>@Model.OrganizerName</span>
            <h4>Status: @Model.GameStatus</h4>
        </div>
        <div class="col-md-4">
            <h4>@Model.CompetitorLimit Player Single Eliminations</h4>
            <h4>@Model.GameName</h4>
        </div>
        <div class="col-md-4"> </div>
    </div>
</div>
 